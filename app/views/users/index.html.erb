<h1>ユーザーリスト</h1>
<hr>
<ul class="list-group">
  <% @users.each do |user| %>
    <li class="list-group-item d-flex text-left align-items-center">
      <%= user.id %>
      <hr>
      <div class="border-bottom border-start border-end border-top border-primary border-2">
        <%= user.name %>
      </div>
      <span class="ms-auto badge bg-primary rounded-pill">
        <%= user.hissekis.count %>
      </span>
    </li>
  <% end %>
</ul>
<br>
